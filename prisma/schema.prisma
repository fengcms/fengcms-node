generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String
  channel_id  Int
  description String
  tags        String
  content     String
  markdown    String
  img         String
  video       String
  author      String
  origin      String
  editor      String
  user_id     Int
  istop       Int       @default(0)
  hits        Int       @default(0)
  type        Int
  status      Int
  time        DateTime  @default(now())
}
